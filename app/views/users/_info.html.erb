<h2>User info</h2></br>
<div class="row">
  
  <%= image_tag user.get_profile_image("100x100") %>
  <table class="table">
    <tr>
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </table>
</div>
<div class="row">
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block"  do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>