<h1>Books#show</h1>
<%= render "layouts/error", obj: @new_book %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: current_user %>
      <%= render "books/form", book: @new_book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image("100x100") %></br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book) %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger", "data-confirm"=>"Are you sure?" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      
    </div>
  </div>
</div>
