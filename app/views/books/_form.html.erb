<div class="row">
  <h2>New book</h2></br>
  
  <%= form_with model: book do |f| %>
    <%= f.label :Title %></br>
    <%= f.text_field :title %></br>
    
    <%= f.label :Opinion %></br>
    <%= f.text_area :body %></br>
    
    <%= f.submit "Create Book", class: "btn btn-success btn-sm" %>
    
  <% end %>
  
</div>